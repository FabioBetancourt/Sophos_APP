<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChallengeSophosApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/light_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">@color/light_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="loginTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#7800FD</item>
        <item name="android:textColorHint">#7800FD</item>
        <item name="boxStrokeColor">#7800FD</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="fontFamily">@font/montserrat_normal</item>
        <item name="iconTint">#7800FD</item>
        <item name="android:maxLines">1</item>
        <item name="hintEnabled">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
        <item name="startIconTint">@color/light_color</item>
        <item name="passwordToggleTint">@color/light_color</item>
    </style>

    <style name="StyleAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
    </style>
</resources>