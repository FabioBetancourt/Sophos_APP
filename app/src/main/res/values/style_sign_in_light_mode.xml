<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="styleBackgroundLight">
        <item name="android:backgroundTint">@color/white</item>
    </style>


    <style name="styleLegend">
        <item name="android:textColor">@color/light_color</item>
    </style>


    <style name="styleLogoSophos">
        <item name="android:src">@drawable/logo_sophos_light</item>
    </style>


    <style name="styleIconPersonTint">
        <item name="startIconTint">@color/light_color</item>
    </style>


    <style name="styleSignInTextViewLight" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColorHint">@color/light_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_normal</item>
        <item name="android:background">@drawable/rounded_border_light_mode</item>
        <item name="startIconTint">@color/light_color</item>
        <item name="passwordToggleTint">@color/light_color</item>
    </style>


    <style name="styleSignInButton1Light">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_border_light_mode</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="styleSignInButton2Light" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_border_light_mode</item>
        <item name="android:textColor">@color/light_color</item>
        <item name="android:drawableStart">@drawable/ic_baseline_fingerprint_24</item>
        <item name="drawableTint">@color/light_color</item>
    </style>


    <style name="tvAppCanAuthenticateTextColor">
        <item name="android:textColor">@color/light_color</item>
    </style>


</resources>